<section class="new-product">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    New Product for Machine <%= @machine.id %>
                </div>
                <div class="card-body">
                    <%= form_for(@product, :html => { :multipart => true, :id => "product_form" }, :url => { :action => "create" }) do |f| %>
                        <div class="form-group">
                            <div class="field">
                                <label for="latitude">Name</label>
                                <%= f.text_field :name, class:"form-control", placeholder:"product name" %>
                            </div>
                            <div class="field">
                                <label for="latitude">Current Inventory Count</label>
                                <%= f.text_field :current_inventory_count, class:"form-control", placeholder:"count" %>
                            </div>
                            <div class="field">
                                <label for="longitude">Max Inventory Count</label>
                                <%= f.text_field :max_inventory_count, class:"form-control", placeholder:"count" %>
                            </div>
                            <div class="field">
                                <label for="longitude">Threshold</label>
                                <%= f.text_field :threshold, class:"form-control", placeholder:"threshold" %>
                            </div>
                        </div>
                        <div class="actions">
                            <%= f.submit "add product", class:"btn btn-success", data: { "disable-with": "adding..." } %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>