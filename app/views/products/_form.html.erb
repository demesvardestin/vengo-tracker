<%= form_for(@product, :html => { :multipart => true, :id => "product_form" }, :url => { :action => "update" }) do |f| %>
    <div class="form-group">
        <div class="field">
            <label for="latitude">Current Inventory Count</label>
            <%= f.text_field :current_inventory_count, class:"form-control", placeholder:"count", value:"#{@product.current_inventory_count}" %>
        </div>
        <div class="field">
            <label for="longitude">Max Inventory Count</label>
            <%= f.text_field :max_inventory_count, class:"form-control", placeholder:"count", value:"#{@product.max_inventory_count}" %>
        </div>
        <div class="field">
            <label for="longitude">Threshold</label>
            <%= f.text_field :threshold, class:"form-control", placeholder:"threshold", value:"#{@product.threshold}" %>
        </div>
    </div>
    <div class="actions">
        <%= f.submit "Update #{@product.name} Details", class:"btn btn-success", data: { "disable-with": "Updating..." } %>
    </div>
<% end %>