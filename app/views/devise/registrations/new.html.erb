<section class="operator-login">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card">
        <div class="card-header">
          Operator Login
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "email" %>
            </div>
          
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "password" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Sign Up", class:"btn btn-primary btn-block", data: { "disable-with": "Creating your account..." } %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>