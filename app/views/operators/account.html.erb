<section id="operator-account">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    Your Account Settings
                </div>
                <div class="card-body">
                    <div id="secret-token">
                        <p>Secret Token: <b><%= @operator.secret_token %></b></p>
                    </div>
                    <%= form_for(@operator, :html => { :multipart => true, :id => "operator_form" }) do |f| %>
                        <div class="form-group">
                            <div class="field">
                                <label for="name">Operator</label>
                                <%= f.text_field :name, class:"form-control", placeholder:"name", value:"#{@operator.name if @operator}" %>
                            </div>
                        </div>
                        <div class="actions">
                            <%= f.submit class:"btn btn-success", data: { "disable-with": "Updating your account..." } %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>